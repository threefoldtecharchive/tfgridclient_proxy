                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Max result per page",
                        "name": "size",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Set farms' count on headers based on filter",
                        "name": "ret_count",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "contract id",
                        "name": "contract_id_id",
                        "in": "query"
