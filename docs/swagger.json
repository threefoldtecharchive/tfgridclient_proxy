                },
                "id": {
                    "type": "string"
                },
                "mru": {
                    "type": "string"
                },
                "nodeId": {
                    "type": "integer"
                },
                "publicConfig": {
                    "$ref": "#/definitions/explorer.publicConfig"
                },
                "sru": {
                    "type": "string"
                },
